datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum UserRole {
  admin
  manager
  customer
}

model Users {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String?
  email     String   @unique
  role      UserRole @default(manager)
  password  String
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}
